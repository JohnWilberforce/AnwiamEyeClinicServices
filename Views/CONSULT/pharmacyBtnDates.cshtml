@model List<AnwiamEyeClinicServices.Models.Pharmacy>

@{
    ViewData["Title"] = "Pharmacy";
}


<div class="d-flex justify-content-lg-start">
    <p style="margin-right:10%">
        <a asp-controller="CONSULT" asp-action="PharmacyDlyRecords" style="text-decoration:none; text-align:center;background-color:seagreen;
width:40%; border-radius: 10px;padding:5px; font-weight:bolder; color:white;"><i class="fas fa-arrow-left"></i>Back</a>
    </p>
    <h4 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-weight:bolder">Pharmacy Records between @ViewBag.stDate and @ViewBag.eDate</h4>
    </div>
<table class="table bg-light">
    <thead class="accordion-header alert-primary">
        <tr>
            <th></th>
            <th>
                PatientId
            </th>
            <th>
                PatientName
            </th>

            <th>
                Diagnosis
            </th>
            <th>
                Medications
            </th>

            <th>
                Date
            </th>
            <th>
                Status
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < @ViewBag.counter; i++)
        {
            <tr>
                <td>
                    @(i + 1)
                </td>
                <td>
                    @(Model[i].PatientId)
                </td>
                <td>
                    @(Model[i].PatientName)
                </td>

                <td>
                    @(Model[i].Diagnosis)
                </td>
                <td>
                    @(Model[i].Medications)
                </td>

                <td>
                    @(Model[i].Date.Value.GetDateTimeFormats()[0])
                </td>
                <td>
                    @(Model[i].Status)
                </td>
            </tr>
        }
    </tbody>
</table>