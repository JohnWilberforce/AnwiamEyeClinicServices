



<div class="card" style="padding:4px; border:solid lightgray 0.5px;">
    <div class="card-header bg-primary" style="text-align:center;font-weight:bolder;color:white;"> MONTHLY TOTALS</div>
    <div class="card-body">
        @using (Html.BeginForm("Totals", "OCT", FormMethod.Post))
        {
            <div style="display:inline-flex;width:400px;justify-content:space-evenly">
                <div style="width:150px;">
                    <span style="font-weight:bold; margin-left:30%;">Start</span>

                    <input type="date" name="stDate" class="form-control" id="autoSizingInput" placeholder="Start Date" style="border:solid lightblue 3px; border-radius:5px;">

                </div>
                <div style="width:150px;">
                    <span style="font-weight:bold;margin-left:30%;">End</span>

                    <input type="date" name="eDate" class="form-control" id="autoSizingInputGroup" placeholder="End Date" style="border:solid lightblue 3px; border-radius:5px;">

                </div>
                <button type="submit" style="font-weight:bolder;margin-left:4%;padding:2px; border-radius:10px;" class="btn-warning">Generate Totals</button>
            </div>
        }
    </div>
</div>
<br />
<div class="card" style="width:40%;">
    <div class="card-header bg-info" style="font-weight:bold;text-align:center;"> TOTALS @ViewBag.b <span style="color:chocolate;">@ViewBag.stDate</span> @ViewBag.a <span style="color:chocolate;">@ViewBag.eDate</span></div>
    <div class="card-body">
        VFT Count:    @ViewBag.VftCount <br /><hr />
            ONH Count:    @ViewBag.OnhCount <br /><hr />
        Macula Count: @ViewBag.MaculaCount <br /><hr />
        Pachymetry Count: @ViewBag.PachymetryCount <br /><hr />
        Total VFT Amount: Ghs @ViewBag.VftTotalAmount <br /><hr />
        Total OCT Amount: Ghs <span>@ViewBag.TotalOfOnhMacPachyAmount</span> <br />
    </div>
</div>

