@model AnwiamEyeClinicServices.Models.Oct

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-between">
    <h4 style="text-align:center;font-weight:bold;color:chocolate;">OCT Patient Registry</h4>
    <a asp-action="OCTfromRevenue" asp-controller="OCT">
        <button type="submit" class="btn btn-primary">Validate Patient</button>
    </a>
</div>
<hr />
<div class="d-flex justify-content-between">
    <div card d-inline-block style="box-shadow:5px 0px 10px 0px lightgrey;">

        <div class="text-dark alert-primary mb-3" style="width: 30rem; margin:auto;">
            <div class="card-header bg-primary" style="font-weight:bolder;text-align:center; color:white;">OPTICAL COHERENT TOMOGRAPHY</div>
<div class="card-body">
<div class="row">
    <div class="col-md-10" style="margin:auto;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScanId" class="control-label">Scan Id</label>
                                <input asp-for="ScanId" class="form-control" style="border:solid lightblue 3px; border-radius:5px;" />
                <span asp-validation-for="ScanId" class="text-danger"></span>
                                <span style="color:darkred; font-weight:bolder;">@ViewBag.tryAgain</span>
            </div>
            
            <div class="form-group">
                <label asp-for="PatientName" class="control-label">Patient Name</label>
                                <input asp-for="PatientName" class="form-control" style="border:solid lightblue 3px; border-radius:5px;" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <label asp-for="ReferredDrName" class="control-label">Name of Doctor</label>
                                <input asp-for="ReferredDrName" class="form-control" style="border:solid lightblue 3px; border-radius:5px;" />
                <span asp-validation-for="ReferredDrName" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <label asp-for="ReFfacility" class="control-label">Doctor's Facility</label>
                                <input asp-for="ReFfacility" class="form-control" style="border:solid lightblue 3px; border-radius:5px;" />
                <span asp-validation-for="ReFfacility" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <label asp-for="Onh" class="control-label">Optic Nerve Head</label>
                                <select asp-for="Onh" class="form-control" style="border:solid lightblue 3px; border-radius:5px;">
                            <option value="">--choose an option--</option>
                            <option value="Yes">Yes</option>
                            <option value="">No</option>

                        </select>

                <span asp-validation-for="Onh" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <label asp-for="Macula" class="control-label"></label>
                                <select asp-for="Macula" class="form-control" style="border:solid lightblue 3px; border-radius:5px;">
                            <option value="">--choose an option--</option>
                            <option value="Yes">Yes</option>
                            <option value="">No</option>
                            
                        </select>
                <span asp-validation-for="Macula" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <label asp-for="Pachymetry" class="control-label"></label>
                                <select asp-for="Pachymetry" class="form-control" style="border:solid lightblue 3px; border-radius:5px;">
                            <option value="">--choose an option--</option>
                            <option value="Yes">Yes</option>
                            <option value="">No</option>

                        </select>
                <span asp-validation-for="Pachymetry" class="text-danger"></span>
            </div>
                    
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                                <input type="date" asp-for="Date" class="form-control" style="border:solid lightblue 3px; border-radius:5px;" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
                    <br />
            <div class="form-group">
                        <input type="submit" value="Add Patient" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
</div>
</div>
    <div class="card d-inline-block text-dark alert-primary mb-3" style="width:30rem;height:350px;box-shadow:5px 0px 10px 0px lightgrey;">

        <div class="card-header bg-primary" style="text-align:center;font-weight:bolder;background-color:lightblue; color:white;">View OCTs Per Date </div>
        <div class="card-body">
            <p>

                @using (Html.BeginForm("DailyRecords", "OCT", FormMethod.Post))
                {
                    <input type="date" value="" name="today" style="border:solid lightblue 3px; border-radius:5px;" />
                    <button type="submit" class="btn btn-primary">Daily Records</button>
                }

            </p>
            <br />
            
           
                <div class="card" style="padding:4px; border:solid lightgray 0.5px;">
                    <div class="card-header bg-primary" style="text-align:center;font-weight:bolder; color:white;"> Generate Report</div>
                    <div class="card-body">
                        @using (Html.BeginForm("ViewReportOCT", "OCT", FormMethod.Post))
                        {
                            <div style="display:inline-flex;width:400px;justify-content:space-evenly">
                                <div style="width:150px;">
                                    <span style="font-weight:bold; margin-left:30%;">Start</span>

                                    <input type="date" name="stDate" class="form-control" id="autoSizingInput" placeholder="Start Date" style="border:solid lightblue 3px; border-radius:5px;">

                                </div>
                                <div style="width:150px;">
                                    <span style="font-weight:bold;margin-left:30%;">End</span>

                                    <input type="date" name="eDate" class="form-control" id="autoSizingInputGroup" placeholder="End Date" style="border:solid lightblue 3px; border-radius:5px;">

                                </div>
                                <button type="submit" style="font-weight:bolder;margin-left:4%;padding:2px; border-radius:10px;" class="btn-warning">Generate Report</button>
                            </div>
                        }
                    </div>
                </div>
         
        </div>
            
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
