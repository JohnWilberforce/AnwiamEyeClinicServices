}
<div class="alert-primary d-flex justify-content-center">
    @using (Html.BeginForm("DailyRecords", "OPD", FormMethod.Post))
    {
        <input type="date" value="" placeholder="YYYY-MM-DD" name="date" style="border:solid lightblue 3px; border-radius:5px;" />
        <button type="submit" class="btn btn-primary btn-outline-light">Daily Records</button>
    }
</div>
