@model List<AnwiamEyeClinicServices.Models.Opd>

@{
    ViewData["Title"] = "OnlyConsultationOpd";
}
<div class="d-flex justify-content-around">
    <p style="margin-right:5%">
        <a asp-action="AccountOpd" style="text-decoration:none; text-align:center;background-color:seagreen;
border-radius: 10px;padding:5px; font-weight:bolder; color:white;"><i class="fas fa-arrow-left"></i>Back</a>
    </p>
    <h4 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-weight:bolder">
        OPD Consultations From "@ViewBag.stDate" to "@ViewBag.eDate"</h4>

    <h4 style="margin-left:5%"> <span style="background-color:seagreen; border-end-end-radius:10px;">Total Amount</span> : Gh @ViewBag.Amount </h4>
</div>

<table class="table bg-light">
    <thead class="alert-primary">
        <tr>
            <th></th>
            <th>
               PatientId
            </th>
            <th>
                PatientName
            </th>
            <th>
                Address
            </th>
            <th>
                Contact
            </th>
            <th>
                Services
            </th>
            <th>
                Amount
            </th>
            <th>
                Status
            </th>
            <th>
                Date
            </th>
          
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < @ViewBag.counter; i++) {
            <tr>
            <td>
                @(i+1)
            </td>
            <td>
                @(Model[i].PatientId)
            </td>
            <td>
                @(Model[i].PatientName)
            </td>
            <td>
                    @(Model[i].Address)
            </td>
            <td>
                    @(Model[i].Contact)
            </td>
            <td>
                    @(Model[i].Services)
            </td>
            <td>
                    @(Model[i].Amount)
            </td>
            <td>
                @(Model[i].Status)
            </td>
            <td>
                    @(Model[i].Date.GetDateTimeFormats()[0])
            </td>
           

        </tr>
}
    </tbody>
</table>
