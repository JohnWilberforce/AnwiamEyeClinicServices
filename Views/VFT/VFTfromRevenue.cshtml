@model IEnumerable<AnwiamEyeClinicServices.Models.RevenueServices>

@{
    ViewData["Title"] = "Validate VFTs";
}

<h5 style="text-align:center;font-weight:bold;">Today's VFTs From Revenue</h5>
<p>
    <a asp-action="Create" style="text-decoration:none; text-align:center;background-color:darkgoldenrod;
width:40%; border-radius: 10px;padding:5px; font-weight:bolder; color:white;">Go Back</a>
</p>
<table class="table">
    <thead class="accordion-header alert-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Services)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Services)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date.GetDateTimeFormats()[0])
            </td>
            
        </tr>
}
    </tbody>
</table>
